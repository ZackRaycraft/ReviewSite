@model IEnumerable<ReviewSite.Models.Review>

@{
    ViewBag.Title = "Index";
}

<div class="header">
    <h1>Reviews</h1>
</div>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="row">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">@Html.DisplayFor(modelItem => item.Name)</h3>
                </div>
                <p>Rating : @Html.DisplayFor(modelItem => item.Rating)</p>
                <p>How was this products? : @Html.DisplayFor(modelItem => item.Category.Name)</p>
                <div class="panel-body">
                    @Html.DisplayFor(modelItem => item.Content)
                </div>
                <div>
                    Published: @Html.DisplayFor(modelItem => item.PublishedDate)
                </div>
            </div>
        </div>
    }
</div>
























